<!DOCTYPE html>
<html>
<head>
  <title>BestReads</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav>
  <ul>
    <% if user_signed_in? %>
      <li><%= link_to "Add New Book", new_book_path %></li>
      <li><%= link_to "View All Books", books_path %></li>
      <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete %></li><br>
    <% elsif admin_signed_in? %>
      <li><%= link_to "Add New Book", new_book_path %></li>
      <li><%= link_to "View All Books", books_path %></li>
      <li><%= link_to "Sign Out as Admin", destroy_admin_session_path, method: :delete %><br>
    <% else %>
      <li><%= link_to "Sign In", new_user_session_path %>
      <li><%= link_to "Sign Up", new_user_registration_path %></li><br>
      <li><%= link_to "Sign In as Admin", new_admin_session_path %></li>
    <% end %>
  </ul>
</nav>

  <% if notice %>
   <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
   <p class="alert alert-danger"><%= alert %></p>
  <% end %>

<%= yield %>

</body>
</html>
